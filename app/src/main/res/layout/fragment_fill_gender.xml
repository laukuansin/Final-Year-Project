<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is your Gender?"
                android:id="@+id/upperView"
                android:textAlignment="center"
                android:textColor="@color/black_1000"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/bottomLayout"
                android:paddingTop="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/male_layout"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_grey_shadow_layout"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_male"
                        android:layout_height="100dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black_1000"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:id="@+id/female_layout"
                    android:background="@drawable/border_grey_shadow_layout"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_female"
                        android:layout_height="100dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Female"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:textSize="20dp"
                        android:textColor="@color/black_1000"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="@drawable/border_top_shadow_layout"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_chevron_left_black"
                android:gravity="center"
                android:padding="10dp"
                android:text="back"
                android:background="@drawable/button_click"
                android:id="@+id/backButton"
                android:textAllCaps="true"
                android:textColor="@color/black_1000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="next"
                android:textAllCaps="true"
                android:padding="10dp"
                android:id="@+id/nextButton"
                android:gravity="center"
                android:background="@drawable/button_click"
                android:alpha="0.3"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:drawableRight="@drawable/ic_chevron_right_primarycolor"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>